.my-userinfo-container {
  height: 100%;
}
.my-userinfo-container .my-userinfo-box {
  background-color: powderblue;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.my-userinfo-container .my-userinfo-box image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 2px solid plum;
  box-shadow: 0 1px 5px black;
}
.my-userinfo-container .my-userinfo-box .nikename {
  font-size: 30px;
  font-style: italic;
  color: pink;
  margin-top: 10px;
}
.my-userinfo-plane1-list {
  padding: 0 10px;
  position: relative;
  top: -20px;
}
.my-userinfo-plane1-list .plane-list {
  background-color: white;
  border-radius: 3px;
}
.my-userinfo-plane1-list .plane-list .plane1 {
  font-size: 17px;
  padding-left: 10px;
}
.my-userinfo-plane1-list .plane-list .plane-box {
  display: flex;
  justify-content: space-around;
}
.my-userinfo-plane1-list .plane-list .plane-box .box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 10px 0;
  font-size: 14px;
}
.my-userinfo-plane1-list .plane-list .plane-box .box .icon {
  width: 30px;
  height: 30px;
}
.plan-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px;
  line-height: 30px;
}

